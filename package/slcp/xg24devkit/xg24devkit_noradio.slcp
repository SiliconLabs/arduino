project_name: arduino_gsdk_config_xg24devkit
package: Platform
label: Platform - Radioless Arduino GSDK config for the xG24 Dev Kit
description: >
  This slcp can be used in place of Empty to generate the
  SDK files needed for the Arduino Core.
category: Platform Examples
quality: production

filter:
  - name: "Platform"
    value: ["Platform"]
  - name: "Device Type"
    value: ["SoC"]
  - name: "Project Difficulty"
    value: ["Beginner"]

component:
  - id: sl_system
  - id: device_init
  - id: device_init_nvic
  - id: psa_crypto
  - id: power_manager
  - id: bootloader_interface
  - id: app_assert
  - id: component_catalog
  - id: mpu
  - id: udelay
  - id: app_log
  - id: iostream_usart
    instance:
     - vcom
  - id: i2cspm
    instance:
     - qwiic
  - id: spidrv_eusart
    instance:
     - exp
  - id: emlib_iadc
  - id: freertos
  - id: pwm
    instance:
    - led0
  - id: emlib_vdac
  - id: gpiointerrupt

source:
  - path: main.c
  - path: app.c

include:
  - path: .
    file_list:
      - path: app.h

configuration:
  - name: SL_PSA_KEY_USER_SLOT_COUNT
    value: "0"
    condition:
      - psa_crypto
  - name: SL_BOARD_ENABLE_VCOM
    value: "1"
  - name: SL_SPIDRV_EUSART_EXP_CS_CONTROL
    value: "spidrvCsControlApplication"
  - name: SL_SPIDRV_EUSART_XG24DEVKIT1_CS_CONTROL
    value: "spidrvCsControlApplication"

tag:
  - hardware:rf:band:2400
